# Database
DATABASE_URL=postgresql://ledgerone:ledgerone@localhost:5432/ledgerone

# CORS
CORS_ORIGINS=http://localhost:3000

# Environment
ENVIRONMENT=development

# LLM Configuration
# Available providers: gemini, claude, ollama
LLM_PROVIDER=gemini

# Gemini AI (Google)
GEMINI_API_KEY=your-gemini-api-key-here
GEMINI_MODEL=gemini-2.0-flash

# Claude AI (Anthropic)
CLAUDE_API_KEY=your-claude-api-key-here
CLAUDE_MODEL=claude-sonnet-4-20250514

# Ollama (Local LLM)
OLLAMA_BASE_URL=http://localhost:11434
OLLAMA_MODEL=llama3.2

# Gmail CC Statement Import (011)
# Google OAuth2 credentials from Google Cloud Console
GOOGLE_CLIENT_ID=your-google-client-id.apps.googleusercontent.com
GOOGLE_CLIENT_SECRET=your-google-client-secret

# Encryption key for storing OAuth tokens and PDF passwords
# Generate with: python -c "from cryptography.fernet import Fernet; print(Fernet.generate_key().decode())"
GMAIL_ENCRYPTION_KEY=your-fernet-encryption-key-here

# OAuth2 redirect URI (must match Google Cloud Console configuration)
GMAIL_OAUTH_REDIRECT_URI=http://localhost:8000/api/v1/gmail/auth/callback
